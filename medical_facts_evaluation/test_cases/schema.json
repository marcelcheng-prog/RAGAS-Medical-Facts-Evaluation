{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Medical Facts Test Case",
  "description": "Schema for Medical Facts evaluation test cases",
  "type": "object",
  "required": ["test_id", "name", "transcript", "ground_truth"],
  
  "properties": {
    "test_id": {
      "type": "string",
      "description": "Unique identifier for the test case"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the test case"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what this test case covers"
    },
    "language": {
      "type": "string",
      "enum": ["de", "en"],
      "default": "de",
      "description": "Language of the transcript"
    },
    "transcript": {
      "type": "string",
      "description": "The medical consultation transcript"
    },
    "ground_truth": {
      "type": "object",
      "required": ["all_medication_names"],
      "properties": {
        "medications_taken": {
          "type": "array",
          "items": { "$ref": "#/definitions/medication" }
        },
        "medications_planned": {
          "type": "array",
          "items": { "$ref": "#/definitions/medication" }
        },
        "all_medication_names": {
          "type": "array",
          "items": { "type": "string" }
        },
        "vital_measurements": {
          "type": "array",
          "items": { "$ref": "#/definitions/vital_measurement" }
        },
        "symptoms": {
          "type": "array",
          "items": { "type": "string" }
        },
        "medical_history": {
          "type": "array",
          "items": { "type": "string" }
        },
        "diagnostic_plans": {
          "type": "array",
          "items": { "type": "string" }
        },
        "therapeutic_interventions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "forbidden_medications": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Medications that should NEVER appear (for hallucination detection)"
        }
      }
    }
  },
  
  "definitions": {
    "medication": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "dose": { "type": "string" },
        "frequency": { "type": "string" },
        "action": { 
          "type": "string",
          "enum": ["new", "stopped", "changed", "refused", "continued"]
        },
        "reason": { "type": "string" },
        "indication": { "type": "string" }
      }
    },
    "vital_measurement": {
      "type": "object",
      "required": ["parameter", "value"],
      "properties": {
        "parameter": { "type": "string" },
        "value": { "type": "string" },
        "unit": { "type": "string" },
        "source": { 
          "type": "string",
          "enum": ["doctor_measured", "patient_reported"],
          "default": "doctor_measured"
        }
      }
    }
  }
}
